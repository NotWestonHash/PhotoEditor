Display

<Display>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Colorado Trip Summer 2022"
        Image:
            id: image
            source: root.display_image()
            size_hint: 1, 6


        BoxLayout:
            size_hint: 1,2
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                Button:
                    text: "<<<"
                    background_color: "black"
                    on_press: root.back_image()
                TextInput:
                    id: file
                    text: "Enter Image Name"
                Button:
                    text: "Black And White"
                    on_release: root.bw()
                Button:
                    text: "Line Image"
                    on_release: root.ln()
                Button:
                    text: "Sepia"
                    on_release: root.sp()
            BoxLayout:
                orientation: "vertical"
                Button:
                    text: ">>>"
                    background_color: "black"
                    on_press: root.advance_image()
                Button:
                    text: "Load"
                    on_release: root.load(file.text)
                Button:
                    text: "Inverse"
                    on_release: root.inv()
                Button:
                    text: "Pointilism"
                    on_release: root.pt()
                Button:
                    text: "Pixelate"
                    on_release: root.px()